include header.pug
body
  div.ega-container
    h2 Text Color
    div.ega-demo__color
      div.ega-row
        div.ega-col-3
          span.ega-text-color--green Green
        div.ega-col-9
          div.ega-demo__color-item
            pre
              code.html
                | &lt;span class="ega-text-color--green"&gt; 
                |   Green
                | &lt;/span&gt;
    h2 Background Color
    div.ega-demo__color
      div.ega-row
        div.ega-col-3
          div.ega-background-color--blue.ega-text-color--white(style='padding: 10px;')
            span Blue
        div.ega-col-9
          div.ega-demo__color-item
            pre
              code.html
                | &lt;div class="ega-background-color--blue"&gt; 
                |   Blue
                | &lt;/div&gt;
    h2 Pallet Color
    - var palettColor = { 'Transparent': '', 'White': '#ffffff', 'Black': '#000000', 'Red': '#f44336', 'Pink': '#e91e63', 'Purple': '#9c27b0', 'Indigo': '#3f51b5', 'Blue': '#2196f3', 'Cyan': '#00bcd4', 'Teal': '#009688', 'Green': '#4caf50', 'Lime': '#cddc39', 'Yellow': '#ffeb3b', 'Amber': '#ffc107', 'Orange': '#ff9800', 'Brown': '#795548', 'Grey': '#9e9e9e', 'Grey Light': '#eeeeee'}
    div.ega-demo__color
    div.ega-row
      each code, name in palettColor
        div.ega-col-4
          case code
            when ''
            when '#ffffff'
              div.ega-text--center(style='color: #000; padding: 10px; background-color:' +code) #{code} #{name}
            default
              div.ega-text--center(style='color: #fff; padding: 10px; background-color:' +code) #{code} #{name}
    
include footer.pug
